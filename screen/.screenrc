startup_message	off

encoding UTF-8

terminfo rxvt-unicode 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'

#termcapinfo rxvt ti@:te@
#termcapinfo rxvt 'hs:ts=\E]2;:fs=\007:ds=\E]2;screen\007' 
#termcapinfo urxvt ti@:te@
#termcapinfo urxvt 'xt=true;hs:ts=\E]2;:fs=\007:ds=\E]2;screen\007' 

vbell off

hardstatus alwayslastline
hardstatus string '%{= kw}Host: %{= kR}%H%{= kw} - %-Lw%{= kG}%50>%n%f* %t%{= kW}%+Lw%< %{= kG}%-=%D %d %M %Y %c:%s%{-}'

shelltitle '$ |'

#screen -t CenterICQ     8 centericq-utf8
screen -t IRSSI         9 irssi
screen 			0
